@using ECommerce.PublicModel
@model IEnumerable<Address>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, ECommerce

@{
    ViewData["Title"] = "آدرس ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Partial("_UserPanel")
</div>
<!--search-category------------------------->
<div class="col-lg-9 col-md-8 col-xs-12 pull-right">
    <div class="col-lg-12 col-xs-12 pull-right">
        <div class="headline-profile">
            <span>آدرس ها</span>
            @*<a href="#" class="add-address" onclick="document.getElementById('modal').style.display='block'"><i class="mdi mdi-map-marker-outline"></i>افزودن آدرس جدید</a>*@
            @*<a class="add-address" id="showaddress" data-toggle="modal" asp-controller="UserProfile" asp-action="AddEditUserAddress"
                data-target="#modal-action"><i class="mdi mdi-map-marker-outline"></i>افزودن آدرس جدید</a>*@

            <a class="add-address" id="showaddress" data-toggle="modal" asp-controller="UserProfile" asp-action="AddEditUserAddress"
               data-target="#modal-action-userprofile">
                <i class="mdi mdi-map-marker-outline"></i>
                افزودن آدرس جدید
            </a>

        </div>
        @*<div class="profile-stats" style="border:none;">
                <button class="profile-address-add" onclick="document.getElementById('modal').style.display='block'">
                    <a href="#"><i class="mdi mdi-map-marker-outline"></i>افزودن آدرس جدید</a>
                </button>
            </div>*@
        @foreach (var item in Model)
        {
            <div class="profile-address-container">
                <div class="profile-address-card">
                    <div class="profile-address-card-desc">
                        <h1 class="address-full-name">@item.Recipient</h1>
                        <span class="address-address-part">@item.City.Name</span>
                    </div>

                    <div class="profile-address-card-data">
                        <ul class="profile-address-card-methods">
                            <li><i class="fa fa-envelope-o"></i>کدپستی : <span>@item.PostalCode</span></li>
                            <li><i class="fa fa-mobile"></i>تلفن همراه :  <span>@item.Mobile</span></li>
                        </ul>



                        <div class="profile-address-card-actions">
                            @*<button class="edit-address-btn" onclick="document.getElementById('modal').style.display='block'">ویرایش</button>*@
                            @*<button class="edit-address-btn" id="editaddress" data-toggle="modal" asp-action="AddEditUserAddress"
                                        data-target="#modal-action-userprofile" asp-route-Id="@item.Id">
                                    ویرایش
                                </button>*@
                            <a class="btn btn-info" id="editauthor" data-toggle="modal" asp-action="AddEditUserAddress"
                               data-target="#modal-action-userprofile" asp-route-Id="@item.Id">
                                <i class="glyphicon glyphicon-pencil"></i>
                                ویرایش
                            </a>
                            <button class="remove-address-btn">حذف</button>
                        </div>
                    </div>
                </div>
            </div>
        }



    </div>
</div>
<!--       modal----------------------->

@Html.Partial("_Modal", new BootstrapModel { Id = "modal-action-userprofile", Size = ModalSize.Medium })

@section Scripts{
    <script src="~/js/UserAddress.js"></script>
}

