@model ResetPasswordViewModel

@{
    ViewBag.Title = "تغییر رمز عبور";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<section class="ResetPasswordform">
    <div class="row form form-lg">
        <div class="col-xl-8 col-md-8">
            <br />
            <h1>@ViewBag.Title</h1>
            <hr />
            <form asp-controller="Account" asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Code" type="hidden" />
                <div class="md-form">
                    <div class="col-md-10">
                        <input asp-for="Mobile" class="form-control" readonly />
                        <label asp-for="Mobile" class="control-label"></label>
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-10">
                    <br />
                    <div class="md-form">
                        <input asp-for="Password" class="form-control" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="md-form">
                    <br />
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-filled-blue">تغییر رمز عبور</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xl-4 col-md-4">
            <div class="img-form">
                <img asp-append-version="true" src="~/images/skin/reset.jpg" width="250" height="268" alt="بازیابی رمز عبور" />
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}