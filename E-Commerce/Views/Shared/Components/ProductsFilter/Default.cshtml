                 // the checkbox is now checked
                 cars += $(this).prop('id').replace("checkCategory", "");
             } else {
                 // the checkbox is now no longer checked
             }
         });

        getAds("@ViewBag.MakerId", "@ViewBag.CarId", "@ViewBag.CategoryGroupId", "@ViewBag.CategoryId", "@ViewBag.BrandId", categories, brands, cars, minPrice, maxPrice, sortingId, skip, @ViewBag.Limit);
     });

        $(document).on('click', '.sorting-value', function (e) {
             //e.preventDefault();

