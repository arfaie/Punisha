    function applyFilter() {
        var skip = 0;

        var sortingId = $('.listing-sort li.listing-active').prop('id').replace("sorting", "");

        var minPrice = $("#slider-range").slider("values", 0);

        var maxPrice = $("#slider-range").slider("values", 1);

        var categories = "";
        var brands = "";
        var cars = "";

        $(".checkCategories").each(function () {
            if (this.checked) {
