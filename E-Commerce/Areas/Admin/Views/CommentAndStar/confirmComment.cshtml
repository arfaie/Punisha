@model string

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, ECommerce

<form asp-controller="CommentAndStar" asp-action="confirmComment">

    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "تایید" })

    <div class="modal-body form-horizontal">
        آیا از تایید کامنت  @Model مطمئن هستید؟
    </div>

    <input type="hidden" name="redirectUrl" value="@Url.Action("index","CommentAndStar")" />

    @await Html.PartialAsync("_ModalFooter", new ModalFooter { SubmitButtonText = "تایید " })

</form>